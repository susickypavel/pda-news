{
	"compilerOptions": {
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": ".",
		"paths": {
			"@/components/*": [
				"./src/components/*"
			],
			"@/screens/*": [
				"./src/screens/*"
			],
			"@/api/*": [
				"./src/api/*"
			],
			"@/context/*": [
				"./src/context/*"
			],
			"@/assets/*": [
				"./assets/*"
			],
			"@/hooks/*": [
				"./src/hooks/*"
			],
			"src/*": [
				"./src/*"
			],
			"@/types/*": [
				"./src/types/*"
			]
		}
	},
	"extends": "expo/tsconfig.base"
}
